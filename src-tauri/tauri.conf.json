{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "shelves",
  "version": "0.1.0",
  "identifier": "shelves",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "/",
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "/splashscreen.html",
        "width": 300,
        "height": 300,
        "center": true,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["shelves"]
      }
    },
    "sql": {
      "preloadDatabases": ["sqlite:shelves.db"]
    }
  }
}
